<h1>Listing brainstorms</h1>

<table>
  <tr>
    <th>Brainstormable type</th>
    <th>Brainstormable</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brainstorms.each do |brainstorm| %>
  <tr>
    <td><%= brainstorm.brainstormable_type %></td>
    <td><%= brainstorm.brainstormable_id %></td>
    <td><%= link_to 'Show', brainstorm %></td>
    <td><%= link_to 'Edit', edit_brainstorm_path(brainstorm) %></td>
    <td><%= link_to 'Destroy', brainstorm, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

