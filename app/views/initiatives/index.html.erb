
<%= title t("initiatives.index_title") %>

<% unless Initiative.all.empty? %>
<%= link_to t("initiatives.index_drafts"), {:controller => :initiatives, :action => "index_drafts", :id => Initiative.first.id}, :class => "link" %>
<% end %>

<%= t("initiatives.geographical_level") %>: 
<%= @geo %>

<form id="filter_form">
<%= check_box_tag("user_level", "off", false) %>
<%= select("filter", "level", Initiative::LEVELS) %>
<input type="submit" value=<%=t("layout.filter") %> />
</form>
<%= link_to_function t('initiatives.options'), "$('filter_form').toggle();" %>


<%= render :partial => "layouts/indexes", :locals => { :bills => @bill } %>

<div class="clear"></div>

<% if permitted_to? :create, Initiative.new %>
	<%= link_to t("initiatives.new"), new_initiative_path, :class => "button" %>
<% else %>
	<p><%= t("#{@controller}.want_initiative") %>: <%= link_to t('layout.sign_in'), authentications_path, :class => "button" %></p>
<% end %>
<% if permitted_to? :create, Category.new %>
	<%= link_to t("initiatives.new_category"), new_category_path, :class => "button" %>
<% end %>