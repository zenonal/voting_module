<% @loc = 'devise.confirmations.' %>

<% title(t(@loc+'title') %>

<%= form_for(resource_name, resource, :url => confirmation_path(resource_name)) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.submit t('devise.confirmations.title') %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>