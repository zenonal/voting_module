<% @loc = 'devise.unlock.' %>

<% title t(@loc+'title') %>

<%= form_for(resource_name, resource, :url => unlock_path(resource_name)) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.submit t(@loc+'title') %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>