<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <title><%= yield(:title) || "Untitled" %></title>
  <%= stylesheet_link_tag 'application' %>
  <%= render 'layouts/scripts' %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %> 
</head>
<body>
	
	<div id="container">
		<div id="headtitle">
			<h1>
			<%= link_to t(:headtitle), root_path %>
			</h1>
		</div>
		  <table class="lang_navigation">
				<tr>

				<td><% link_to language_fra_url do %>
					<img width="20" height="20" border="" align="middle" alt="" src="/images/bt_fr.gif">
				<% end %></td>
				<td><% link_to language_ndl_url do %>
					<img width="20" height="20" border="" align="middle" alt="" src="/images/bt_nl.gif">
				<% end %></td>
				<td><% link_to language_eng_url do %>
					<img width="20" height="20" border="" align="middle" alt="" src="/images/bt_us.gif">
				<% end %></td>
				</tr>
			</table>
		
	      <div id="user_nav">
			
	        <% if user_signed_in? %>
	<%= link_to image_tag(current_user.photo), edit_user_registration_path %>
	          <%= t('layout.sign_in_phrase') %> <%= link_to current_user.email, edit_user_registration_path %>. <%= t('layout.not_you') %>
	          <%= link_to t('layout.sign_out'), destroy_user_session_path %>
	        <% else %>
	          <%= link_to t('layout.sign_in'), authentications_path %>
	        <% end %>
	      </div>

	      <% flash.each do |name, msg| %>
	        <%= content_tag :div, msg, :id => "flash_#{name}" %>
	      <% end %>
	
		  <% if show_title? %>
		        <h1><%= yield(:title) %></h1>
		  <% end %>
		
		  <%= yield %>
		
	 </div>
</body>
</html>
