<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <title><%= yield(:title) || "Untitled" %></title>
  <%= stylesheet_link_tag 'application' %>
  <%= render 'layouts/scripts' %>
<%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %> 
</head>
<body>

		
	<div id="container">
		
		<span id="lang_navigation">
				<%= link_to language_fra_url do %>
					<img width="20" height="20" border="" align="middle" alt="" src="/images/bt_fr.gif">
				<% end %>
				<%= link_to language_ndl_url do %>
					<img width="20" height="20" border="" align="middle" alt="" src="/images/bt_nl.gif">
				<% end %>
				<%= link_to language_eng_url do %>
					<img width="20" height="20" border="" align="middle" alt="" src="/images/bt_us.gif">
				<% end %>
				<%= t('layout.activate_tutorial') %>
				<%= link_to language_tutorial_url do %>
					<img width="20" height="20" border="" align="middle" alt="" src="/images/bt_tut.gif" title="Tutorial">
				<% end %>
		</span>
		<span id="user_nav">
						<% if user_signed_in? %>
							<% if current_user.photo.blank?%>
								<%= link_to t('layout.add_photo'), edit_user_registration_path %>
							<% else %>
								<%= link_to image_tag(current_user.photo, :size => "30x30"), user_path(current_user) %>
							<% end %>
				          <%= t('layout.sign_in_phrase') %> <%= link_to current_user.email, user_path(current_user) %>. <%= t('layout.not_you') %>
				          <%= link_to t('layout.sign_out'), destroy_user_session_path %>
				        <% else %>
				          <%= link_to t('layout.sign_in'), authentications_path %>
				        <% end %>
		</span>
		
		
		
		<div id="headtitle">
			<h1>
			<%= link_to t(:headtitle), root_path %>
			</h1>
		</div>
		  
	      <% flash.each do |name, msg| %>
	        <%= content_tag :div, msg, :id => "flash_#{name}" %>
	      <% end %>
		
		  <%= yield %>
		
	 </div>
</body>
</html>
