<% if params[:controller] == "initiatives" %>
<meta property="og:title" content='<%= eval("@initiative.name_#{I18n.locale}") %>'/>
<meta property="og:type" content="bill"/>
<meta property="og:url" content="<%= url_for(@initiative) %>"/>
<meta property="og:image" content='<%= @initiative.photo.url("small") %>'/>
<meta property="og:site_name" content="<%= t('homepage.title') %>"/>
<meta property="fb:admins" content="539329259"/>
<meta property="og:description"
          content='<%= truncate(eval("@initiative.content_#{I18n.locale}"), :length => 200) %>'/>
<% end %>
