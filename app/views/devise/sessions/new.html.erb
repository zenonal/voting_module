<% @loc = 'devise.sessions.' %>

<%= title t(@loc+'title') %>

<h3><%= t(@loc+'intro') %></h3>

<%= form_for(resource_name, resource, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label t(@loc+'email') %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label t(@loc+'pwd') %><br />
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label t(@loc+'remember') %></p>
  <% end -%>

  <p><%= f.submit t(@loc+'title') %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>